<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayFragment">

    <Button
        android:id="@+id/showdialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Message"
        android:textColor="#0000ff"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="@id/showdialog"
        app:layout_constraintTop_toBottomOf="@id/showdialog" />

    <TextView
        android:id="@+id/tvStudentUsn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Message"
        android:textColor="#0000ff"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="@id/showdialog"
        app:layout_constraintTop_toBottomOf="@id/tvStudentName" />

</androidx.constraintlayout.widget.ConstraintLayout>